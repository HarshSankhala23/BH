             â–€                                                                                                    
"""

console.print(Panel.fit(
    f"[bold red]{logo}[/bold red]\n[cyan]Automated BloodHound Data Collector ğŸš€[/cyan]",
    border_style="bright_magenta"
))

def run_bloodhound(domain, ns_server, username, password, dc):
    command = [
        "bloodhound-python",
        "-d", domain,
        "-v",
        "--zip",
        "-c", "ALL",
        "-u", username,
        "-p", password,
        "-dc", dc,
        "-ns", ns_server
    ]

    start_time = time.time()


    with Progress(
        SpinnerColumn(spinner_name="dots", style="magenta"),
        "[progress.description]{task.description}",
        TimeElapsedColumn(),
        console=console,
        transient=True
    ) as progress:
        task = progress.add_task("[bold green]ğŸ” Collecting data with BloodHound...", start=True)

        try:
            subprocess.run(command, check=True, stdout=subprocess.DEVNULL, stderr=subprocess.DEVNULL)
            progress.update(task, description="[bold green]âœ… Data collection completed successfully! ğŸš€")
        except subprocess.CalledProcessError:
            progress.update(task, description=f"[bold red]âŒ Error occurred during data collection.")
        finally:
            elapsed_time = time.time() - start_time
            console.print("\n[bold cyan]â± Total Time Elapsed:[/bold cyan] {:.2f} seconds\n".format(elapsed_time))

def pretty_input(prompt_text, emoji, style):
    return Prompt.ask(f"[{style}]{emoji} {prompt_text}[/{style}]")

if __name__ == "__main__":
    domain = pretty_input("Enter Domain Name (e.g sequel.htb)", "ğŸŒ", "bold green")
    ns_server = pretty_input("Enter Nameserver IP (e.g 10.129.89.239)", "ğŸ—‚ï¸ ", "bod red")
    username = pretty_input("Enter Username (e.g ryan)", "ğŸ‘¤", "bold cyan")
    password = pretty_input("Enter Password", "ğŸ”‘", "bold magenta")
    dc = pretty_input("Enter Domain Controller (e.g dc01.sequel.htb)", "ğŸ¢", "bold yellow")

    run_bloodhound(domain, ns_server, username, password, dc)
